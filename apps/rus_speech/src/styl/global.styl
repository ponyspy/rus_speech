@import '_fonts.styl'
@media screen and (max-width: 680px)
	@import 'mobile/_global.styl'

html, body
	margin 0
	padding 0
	font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;

h1, h2
	margin 0
	padding 0

a
	color black

.title_block
	width 100%
	background-color rgb(245, 238, 229)
	.title_inner
		max-width 1280px
		margin 0 auto
		overflow hidden
		.logo_block
			display block
			float left
			text-decoration none
			&:hover .logo_text
				opacity 0.7
			.logo
				display inline-block
			.logo_text
				display inline-block
				vertical-align top
				color rgb(255, 91, 91)
				font 42px/44px 'MontserratAlternates BoldItalic'
		.menu_block
			float left
			display inline-block
			margin-left 60px
			a
				font 16px/18px 'Montserrat SemiBold'
				text-transform uppercase
				text-decoration none
				color rgb(255, 91, 91)
				&:hover
					opacity 0.7
				&:after
					content 'ãƒ»'
					margin-left 5px
					margin-right 5px
					display inline-block
				&:last-child:after
					content ''
		.social_block
			float right
			a
				margin-right 20px
				&:hover
					opacity 0.7
				&:last-child
					margin-right 0




.footer_block
	width 100%
	background-color rgb(245, 238, 229)
	padding-top 30px
	padding-bottom 30px
	.footer_inner
		text-align center