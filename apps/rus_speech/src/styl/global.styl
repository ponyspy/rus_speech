@import '_fonts.styl'
@media screen and (max-width: 680px)
	@import 'mobile/_global.styl'

html, body
	margin 0
	padding 0
	font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;

h1, h2
	margin 0
	padding 0

a
	color black

.title_block
	width 100%
	background-color rgb(245, 238, 229)
	padding-top 10px
	padding-bottom 10px
	padding-left 40px
	padding-right 40px
	box-sizing border-box
	.title_inner
		max-width 1280px
		margin 0 auto
		overflow hidden
		.main_block
			float left
			overflow hidden
			.logo
				text-decoration none
				float left
				margin-right 30px
				display block
			.logo_text
				text-decoration none
				color rgb(255, 91, 91)
				font 36px/46px 'MontserratAlternates BoldItalic'
				&:hover
					opacity .7

		.menu_block
			margin-top 10px

		.stargazer_block
		.menu_block
			margin-left 0
			a
				display inline-block
				font 16px/18px 'Montserrat SemiBold'
				text-transform uppercase
				text-decoration none
				color rgb(255, 91, 91)
				&:hover
					opacity 0.7
				&:after
					content '・'
					margin-left 5px
					margin-right 5px
					display inline-block
				&:last-child:after
					content ''
					margin 0

		.stargazer_block
			display inline

		.social_block
			margin-top 30px
			float right
			a
				margin-right 20px
				&:hover
					opacity 0.7
				&:last-child
					margin-right 0


.content_block
	max-width 860px
	margin 0 auto
	padding-left 40px
	padding-right 40px
	box-sizing border-box


.footer_block
	padding-left 40px
	padding-right 40px
	width 100%
	box-sizing border-box
	background-color rgb(245, 238, 229)
	padding-top 40px
	padding-bottom 40px
	.footer_inner
		text-align center
		font 14px/16px 'Montserrat Medium'
		.lang_block
			margin-top 20px
			a
				color rgb(255, 91, 91)
				text-decoration none
				&:hover
					opacity 0.7
				&:after
					content '・'
					margin-left 5px
					margin-right 5px
					display inline-block
				&:last-child:after
					content ''