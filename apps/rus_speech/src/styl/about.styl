.about_block
	.about_title
		margin-top 60px
		font 42px/44px 'Montserrat Bold'
		color rgb(74, 74, 74)
		text-align center
	.about_s_title
		text-align center
		font 30px/32px 'Lora Regular'
		color rgb(80, 80, 80)
		margin-top 40px
	.about_spacer
		width 6px
		height 6px
		margin 0 auto
		margin-top 40px
		margin-bottom 30px
		border-radius 100%
		background-color rgb(165, 165, 165)
	.about_intro
		font 22px/32px 'Lora Regular'
		color rgb(74, 74, 74)


.team_block
	margin-bottom 120px
	.team_title
		margin-top 40px
		margin-bottom 40px
		text-align center
		position relative
		width 100%
		.title_line
			width 100%
			height 2px
			background-color rgb(205, 205, 205)
			position absolute
			top 10px
			z-index 0
		.title_text
			z-index 1
			position relative
			color rgb(82, 127, 245)
			background-color white
			padding-left 30px
			padding-right 30px
			display inline-block
			font 20px/22px 'Montserrat SemiBold'
	.team_members
		font-size 0
		.mamber_item
			width 50%
			display inline-block
			text-align center
			.mamber_photo
				display inline-block
				width 30%
				padding-top 30%
				background-position center
				background-size cover
				background-repeat no-repeat
				border-radius 100%
			.member_name
				margin-top 20px
				text-align center
				font 20px/22px 'Montserrat SemiBold'
				color rgb(78, 91, 125)
			.member_intro
				margin-top 20px
				text-align center
				color rgb(74, 74, 74)
				font 18px/20px 'Lora Regular'