.lessons_block
	.lessons_title
		margin-top 60px
		font 42px/44px 'Montserrat Bold'
		color rgb(74, 74, 74)
		text-align center
	.lessons_s_title
		text-align center
		font 30px/32px 'Lora Regular'
		color rgb(80, 80, 80)
		margin-top 40px


.schedule_block
	margin-top 40px
	margin-bottom 80px
	padding-top 40px
	font-size 0
	.schedule_inner
		margin-left -20px
		.schedule_item
			width 25%
			padding-left 20px
			box-sizing border-box
			display inline-block
			vertical-align top
			.item_inner
				box-sizing border-box
				padding 10px
				border-radius 5px
				margin-bottom 40px
				background-color rgb(239, 239, 242)
				.schedule_price
					text-align center
					padding-top 10px
					padding-bottom 20px
					color rgb(255, 91, 91)
					font 20px/22px 'Montserrat Bold'
				.schedule_description
					text-align center
					color rgb(82, 127, 245)
					font 16px/18px 'Montserrat SemiBold'
				.schedule_button
					margin-top 20px
					text-align center
					padding-top 10px
					padding-bottom 10px
					border 2px solid rgb(82, 127, 245)
					border-radius 5px
					font 16px/22px 'Montserrat SemiBold'
					cursor pointer
					&.buy
						color white
						background-color rgb(82, 127, 245)
						&:hover
							color white
							background-color rgb(255, 91, 91)
							border-color rgb(255, 91, 91)
					&.preview
						color rgb(82, 127, 245)
						&:hover
							background-color rgb(82, 127, 245)
							color white

.footer_block
	position absolute
	bottom 0