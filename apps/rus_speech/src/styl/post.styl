.post_block
	.post_title
		margin-top 60px
		font 42px/44px 'Montserrat Bold'
		color rgb(74, 74, 74)
		text-align center
	.post_s_title
		text-align center
		font 30px/32px 'Lora Regular'
		color rgb(165, 165, 165)
		margin-top 40px
	.post_spacer
		width 6px
		height 6px
		margin 0 auto
		margin-top 40px
		margin-bottom 30px
		border-radius 100%
		background-color rgb(165, 165, 165)
	.post_intro
		font 22px/32px 'Lora Regular'
		color rgb(165, 165, 165)
		margin-bottom 40px
	.post_poster
		margin-top 40px
		margin-bottom 40px
		width 100%
		max-width 100%
		display block
	.post_description
		font 22px/32px 'Lora Regular'
		color rgb(165, 165, 165)
		hyphens auto
		font 14pt/22pt 'PT Serif'
		b
			font-weight normal
			font-family 'PT Serif Bold'
		.video_outer
			width 100%
			position relative
			padding-bottom 56.25% /* 16:9 */
			padding-top 0px
			height 0
			.video_embed
				position absolute
				top 0
				left 0
				width 100%
				height 100%
		img ~ br
			display none
		img
			display block
			max-width 100%
			width 100%


	.post_attach_block
		margin-top 40px
		margin-bottom 80px
		border-top 1px solid rgb(225, 225, 225)
		padding-top 40px
		font-size 0
		.attach_inner
			margin-left -20px
			.attach_item
				width 25%
				padding-left 20px
				box-sizing border-box
				display inline-block
				vertical-align top
				.item_inner
					box-sizing border-box
					padding 10px
					border-radius 5px
					margin-bottom 40px
					background-color rgb(239, 239, 242)
					.attach_price
						text-align center
						padding-top 10px
						padding-bottom 20px
						color rgb(255, 91, 91)
						font 20px/22px 'Montserrat Bold'
					.attach_description
						text-align center
						color rgb(82, 127, 245)
						font 16px/18px 'Montserrat SemiBold'
						margin-bottom 20px
					.attach_button
						display block
						margin-top 10px
						text-align center
						padding-top 10px
						padding-bottom 10px
						border 2px solid rgb(82, 127, 245)
						border-radius 5px
						font 16px/22px 'Montserrat SemiBold'
						cursor pointer
						text-decoration none
						&.buy
							color white
							background-color rgb(82, 127, 245)
							&:hover
								color white
								background-color rgb(255, 91, 91)
								border-color rgb(255, 91, 91)
						&.preview
							color rgb(82, 127, 245)
							&:hover
								background-color rgb(82, 127, 245)
								color white
