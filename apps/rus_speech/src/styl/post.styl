.post_block
	.post_title
		margin-top 60px
		font 42px/44px 'Montserrat Bold'
		color rgb(74, 74, 74)
		text-align center
	.post_s_title
		text-align center
		font 30px/32px 'Lora Regular'
		color rgb(165, 165, 165)
		margin-top 40px
	.post_spacer
		width 6px
		height 6px
		margin 0 auto
		margin-top 40px
		margin-bottom 30px
		border-radius 100%
		background-color rgb(165, 165, 165)
	.post_intro
		font 22px/32px 'Lora Regular'
		color rgb(165, 165, 165)
	.post_video
		width 100%
		margin-top 40px
		margin-bottom 40px
		.video_inner
			position relative
			padding-bottom 56.25% /* 16:9 */
			padding-top 0px
			height 0
			.video
				position absolute
				top 0
				left 0
				width 100%
				height 100%
	.post_poster
		margin-bottom 40px
		width 100%
		padding-top 60%
		background-position center
		background-size cover
		background-repeat no-repeat
	.post_description
		font 22px/32px 'Lora Regular'
		color rgb(165, 165, 165)