@media screen and (max-width: 680px)
	@import 'mobile/_main.styl'

.categorys_block
	padding-top 25px
	padding-bottom 25px
	border-bottom 1px solid rgb(205, 205, 205)
	padding-left 40px
	padding-right 40px
	box-sizing border-box
	.category_item
		text-transform uppercase
		display inline-block
		cursor pointer
		margin-right 30px
		color rgb(148, 156, 177)
		font 14px/16px 'Montserrat SemiBold'
		&:hover
		&.active
			color rgb(74, 74, 74)
		&:last-child
			margin-right 0
		&:before
			content '#'


.posts_block
	margin 0 auto
	padding-left 40px
	padding-right 40px
	box-sizing border-box
	.post_item
		margin-top 40px
		margin-bottom 40px
		border-bottom 1px solid rgb(225, 225, 225)
		padding-bottom 40px
		.post_poster
			width 100%
			display block
			padding-top 60%
			background-position center
			background-size cover
			background-repeat no-repeat
			margin-bottom 30px
		.post_categorys
			.p_category_item
				cursor pointer
				text-transform uppercase
				display inline-block
				color rgb(82, 127, 245)
				font 14px/16px 'Montserrat Bold'
				margin-right 20px
				&:hover
				&.active
					opacity 0.7
				&:last-child
					margin-right 0
				&:before
					content '#'
		.post_title
			margin-top 25px
			margin-bottom 25px
			font 32px/34px 'Montserrat Bold'
			color rgb(74, 74, 74)
			display block
			text-decoration none
			&:hover
				color rgb(82, 127, 245)
		.post_s_title
			font 20px/22px 'Lora Regular'
			color rgb(165, 165, 165)


.posts_more
	text-align center
	margin-bottom 120px
	span
		padding-top 15px
		padding-bottom 15px
		padding-left 20px
		padding-right 20px
		display inline-block
		color rgb(82, 127, 245)
		border 2px solid rgb(82, 127, 245)
		border-radius 4px
		cursor pointer
		font 14px/16px 'Montserrat SemiBold'
		&:hover
			color white
			background-color rgb(82, 127, 245)