extends layout

block header_meta
	- var content_title= 'Time to Speak Russian | ' + post.i18n.title.get(locale)
	- var content_description= ''

block header_include
	- var include_css = ['post.css']
	//- - var include_js = ['post.js']

block content
	.post_block
		.post_title=post.i18n.title.get(locale)
		.post_s_title=post.i18n.s_title.get(locale)
		.post_spacer
		.post_intro!=post.i18n.intro.get(locale)
		if post.video && post.video.provider
			- var provider_path= post.video.provider == 'youtube' ? 'https://www.youtube.com/embed/' : 'https://player.vimeo.com/video/'
			.post_video: .video_inner: iframe.video(src=provider_path + post.video.id, frameborder='0', allow='autoplay; encrypted-media', allowfullscreen='')
		else
			.post_poster(style='background-image: url(' + post.poster + ')')
		.post_description!=post.i18n.description.get(locale)
		.post_attach_block: .attach_inner
			each item in new Array(5)
				.attach_item: .item_inner
					.attach_price 5
					.attach_description Название файла 1 урока среднее
					.attach_button.preview предпросмотр
					.attach_button.buy купить