extends layout

block header_meta
	- var content_title= 'Time to Speak Russian'
	- var content_description= ''

block header_include
	- var include_css = ['main.css']
	- var include_js = ['main.js']

block content
	.categorys_block
		.category_item(id='all') все
		each category in categorys
			.category_item(id=category._short_id)= category.i18n.title.get(locale)

	.posts_block
		each post in posts
			.post_item
				if post.poster
					a.post_poster(href='/post/' + post._short_id, style='background-image: url(' + post.poster + ')')
				.post_categorys
					each category in post.categorys
						.p_category_item= category.i18n.title.get(locale)
				a.post_title(href='/post/' + post._short_id)=post.i18n.title.get(locale)
				.post_s_title=post.i18n.s_title.get(locale)

	.posts_more: span Загрузить еще